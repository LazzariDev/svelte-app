{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
      "ignoreDeprecations": "5.0",
      "baseUrl": ".",
      "paths": {
        "@components/*": ["./src/components/*"],
        "@actions/*": ["./src/actions/*"],
        "@stores/*": ["./src/stores/*"],
        "@db/*": ["./src/db/*"],
        "@api/*": ["./src/api/*"],
      }
    },
    "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}